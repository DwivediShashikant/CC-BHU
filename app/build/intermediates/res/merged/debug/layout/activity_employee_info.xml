<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E1F5FE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashikant.bhuconnect.EmployeeInfo">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emp_name"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Welcome, Name"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/headingColor"
                android:text="Profile and Salary Slip"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_centerHorizontal="true"

                />

        </RelativeLayout>

        <View

            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="24dp"
            android:background="@color/headingColor"
            />



        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/employee_profile"
            android:layout_gravity="center_horizontal"
            android:id="@+id/profile"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="32dp"

            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="vertical">


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Profile Info"
                android:id="@+id/profile_info"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/salary_slip_info"
                android:layout_below="@+id/profile_info"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/custom_border"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:text="Salary Slip Info"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>



</RelativeLayout>
