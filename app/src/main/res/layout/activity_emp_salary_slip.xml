<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.shashikant.bhuconnect.EmpSalarySlip"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textColor="@color/headingColor"
            android:text="Salary Slip"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>

    <View

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="12dp"
        android:background="@color/headingColor"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Layout For Account Number -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account Number"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/account_number"
                    android:text="10655002781"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>


            <!--Layout For Basic Pay -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Basic Pay"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/basic_pay"
                    android:text="458693"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>


            <!--Layout For DA -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DA"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/da"
                    android:text="458693"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>


            <!--Layout For HRA -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HRA"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/hra"
                    android:text="458693"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <!--Layout For TA -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TA"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/ta"
                    android:text="19693"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <!--Layout For TA -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gross Pay"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/gross_pay"
                    android:text="30693"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <!--Layout For Pay Band -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay Band"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pay_band"
                    android:text="PB-1"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <!--Layout For Total Deduction -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Deduction"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/total_deduction"
                    android:text="20074"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <!--Layout For Net Pay -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Net Pay"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/headingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/headingColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=":"/>

                <TextView
                    android:layout_width="0dp"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/net_pay"
                    android:text="10285"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated On :"
            android:layout_marginRight="4dp"
            android:id="@+id/abc"
            android:textColor="@color/category_numbers"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24-04-2017"
            android:id="@+id/update_date"
            android:layout_toRightOf="@+id/abc"
            android:textAppearance="?android:textAppearanceSmall"/>
    </RelativeLayout>

</LinearLayout>